; HM NIS Edit Wizard helper defines
!define PRODUCT_NAME "RDC EUART Driver"
!define PRODUCT_VERSION "1.0"
!define PRODUCT_PUBLISHER "RDC, Inc."
!define PRODUCT_WEB_SITE "http://www.rdc.com.tw"
!define PRODUCT_DIR_REGKEY "Software\Microsoft\Windows\CurrentVersion\App Paths\devcon.exe"
!define PRODUCT_UNINST_KEY "Software\Microsoft\Windows\CurrentVersion\Uninstall\${PRODUCT_NAME}"
